{
  "name": "@akashnetwork/akash-client",
  "version": "1.0.0",
  "description": "Akash API TypeScript client",
  "keywords": [],
  "license": "Apache-2.0",
  "author": "Akash Network Team",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run format",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,json}' --config ./.prettierrc",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "cd .. && husky ts/.husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "package.json": [
      "sort-package-json ts/package.json"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.8.0",
    "ts-proto": "^1.169.1",
    "typescript": "^5.4.2"
  }
}
